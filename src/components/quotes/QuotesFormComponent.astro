---
const { errors  } = Astro.props;

---


<form method="post" class="form-container">
    <div id="contact-form">
        <div class="item-wrapper">
            <label for="plans" >Planes</label>
            <select id="plans" name="plans">
            <option value="Plan Emprendedor">Plan Emprendedor</option>
            <option value="Plan Pyme">Plan Pyme</option>
            <option value="Plan Corporativo" >Plan Corporativo </option>
            </select>
            {errors?.plans && <p>{errors.plans}</p>}
        </div>
        <div class="item-wrapper">
            <label for="fullName">Nombres y apellidos</label>
            <input id="fullName" placeholder="Nombres y apellidos" name="fullName" />
            {errors?.fullName && <p>{errors.fullName}</p>}
        </div>

        <div class="item-wrapper">
            <label for="phoneNumber">Teléfono</label>
            <input
              type="number"
              id="phoneNumber"
              placeholder="Telefono"
              name="phoneNumber"
            />
            {errors?.phoneNumber && <p>{errors.phoneNumber}</p>}
        </div>

        <div class="item-wrapper">
            <label for="businessline">Giro del Negocio</label>
            <input id="businessline" placeholder="Giro del Negocio" name="businessline"   />
            {errors?.businessline && <p>{errors.businessline}</p>}
        </div>

        <div class="item-wrapper">
            <label for="accountingadvice">¿Cuenta con asesoria contable?</label>
            <select id="accountingadvice" name="accountingadvice" >
                <option value=true>Si</option>
                <option value=false>No</option>
            </select>
            {errors?.accountingadvice && <p>{errors.accountingadvice}</p>}
        </div>
        <div class="item-wrapper">
            <label for="template">¿Tienes plantilla?</label>
            <select id="template" name="template" >
                <option value=true>Si</option>
                <option value=false>No</option>
            </select>
            {errors?.template && <p>{errors.template}</p>}
        </div>
        <div class="item-wrapper">
            <label for="accountingtype">Tipo de contabilidad</label>
            <select id="accountingtype" name="accountingtype"  >
                <option value="Manual">Manual</option>
                <option value="Computarizada">Computarizada</option>
            </select>
            {errors?.accountingtype && <p>{errors.accountingtype}</p>}
        </div>

        <div class="item-wrapper">
            <label for="shopping">Compras</label>
            <input type="number" id="shopping" placeholder="Compras" name="shopping"   />
            {errors?.shopping && <p>{errors.shopping}</p>}
        </div>
        <div class="item-wrapper">
            <label for="email">Email</label>
            <input id="email" placeholder="Email" name="email" />
            {errors?.email && <p>{errors.email}</p>}
        </div>

        <div class="item-wrapper">
            <label for="ruc">RUC</label>
            <input
              type="number"
              id="ruc"
              placeholder="R.U.C"
              name="ruc"
            />
            {errors?.ruc && <p>{errors.ruc}</p>}
        </div>
        <div class="item-wrapper">
            <label for="taxregime">Regimen triburario</label>
            <input
              id="taxregime"
              placeholder="Regimen tributario"
              name="taxregime"
            />
            {errors?.taxregime && <p>{errors.taxregime}</p>}
        </div>
        <div class="item-wrapper">
            <label for="monthlybudget">Presupuesto mensual</label>
            <input
              type="number"
              id="monthlybudget"
              placeholder="Presupuesto mensual"
              name="monthlybudget"
            />
            {errors?.monthlybudget && <p>{errors.monthlybudget}</p>}
        </div>

        <div class="item-wrapper">
            <label for="workers">¿Cuantos trabajadores?</label>
            <input
              type="number"
              id="workers"
              placeholder="¿Cuantos trabajadores?"
              name="workers"
            />
            {errors?.workers && <p>{errors.workers}</p>}
        </div>

        <div class="item-wrapper">
            <label for="monthlysales">Ventas</label>
            <input
              type="number"
              id="monthlysales"
              placeholder="Ventas mensual"
              name="monthlysales"
            />
            {errors?.monthlysales && <p>{errors.monthlysales}</p>}
        </div>
        <button class="btn-submit" id="btn-submit">Enviar</button>
    </div>
</form>
<style lang="scss">
  .form-container {
      #contact-form{
          display: grid;
          grid-template-columns: 1fr 1fr 1fr;
          gap:1em;
      }
    .item-wrapper {
      display: flex;
      flex-direction: column;
      align-items: start;
        grid-column: span 3;

        @media (min-width: 1024px){
            grid-column: span 1;
        }

        &:nth-child(10),
        &:nth-child(11){
            @media (min-width: 1024px){
                grid-column: span 3;
            }
        }

      label {
        color: white;
        font-size: 0.8em;
        margin-bottom: 0.5em;
      }
      input,
      textarea,select {
        width: 100%;
        border-radius: 0.5em;
        font-size: 1em;
        padding: 0.3em;
        border-color: transparent;
        outline: none;
      }
    }
    .btn-submit {
      margin: 0 auto;
      font-size: 1.2em;
      text-transform: upperCase;
      font-style: italic;
      background-color: #0d77c1;
      color: #fff;
      padding: 0.6px;
      border-radius: 7em;
      width: 100%;
      border-color: transparent;
      cursor: pointer;
        grid-column: span 3;
        @media (min-width: 768px){
            //grid-column: 2 / 3;
        }
    }

    .error-item {
      border: 1px solid red;
    }
  }
</style>