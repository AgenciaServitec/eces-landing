---
import Icon from "astro-icon";
import { services } from "../data-list";
---

<section id="services">
  <h2>Nuestros Servicios</h2>
  <div class="services-container">
    <article>
      <div class="services-container__image">
        <img src="/images/contabilidad.webp " />
      </div>
      <div>
        <h3>Contabilidad</h3>
        <ul>
          {
            services.accounting.map((item) => (
              <li>
                <Icon
                  class="icon"
                  pack="mdi"
                  name="arrow-right-bold-circle-outline"
                  size={19}
                />
                {item}
              </li>
            ))
          }
        </ul>
      </div>
    </article>
    <article>
      <div class="services-container__image">
        <img src="/images/administracion.webp " />
      </div>
      <div>
        <h3>Administracion</h3>
        <ul>
          {
            services.administration.map((item) => (
              <li>
                <Icon
                  class="icon"
                  pack="mdi"
                  name="arrow-right-bold-circle-outline"
                  size={19}
                />
                {item}
              </li>
            ))
          }
        </ul>
      </div>
    </article>
    <article>
      <div class="services-container__image">
        <img src="/images/reorganizacion.webp " />
      </div>

      <div>
        <h3>Reestructuracion y Liquidacion</h3>
        <ul>
          {
            services.reorganization.map((item) => (
              <li>
                <Icon
                  class="icon"
                  pack="mdi"
                  name="arrow-right-bold-circle-outline"
                  size={19}
                />
                {item}
              </li>
            ))
          }
        </ul>
      </div>
    </article>
    <article>
      <div class="services-container__image">
        <img src="/images/otras.webp " />
      </div>
      <div>
        <h3>Otras especiaidades</h3>
        <ul>
          {
            services.others.map((item) => (
              <li>
                <Icon
                  class="icon"
                  pack="mdi"
                  name="arrow-right-bold-circle-outline"
                  size={19}
                />
                {item}
              </li>
            ))
          }
        </ul>
      </div>
    </article>
  </div>
</section>

<style>
  section {
    background: blue;
    width: 100%;
    padding: 1em;
    height: auto;
    margin: 3em 0;
  }
  h2 {
    color: white;
    font-size: 3em;
    text-align: center;
    text-transform: uppercase;
    font-weight: bold;
    margin-bottom: 1em;
  }

  .services-container {
    //width: 80%;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2em;
    article {
      border-radius: 1em;
      background: white;
      overflow: hidden;

      .services-container__image {
        height: 20em;
        padding: 1em;
        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
          border-radius: 1em;
        }
      }
      div:last-child {
        padding: 1em;

        h3 {
          font-size: 1.5em;
          color: blue;
          text-align: center;
          margin-bottom: 0.5em;
        }

        ul {
          list-style: none;
          display: flex;
          flex-direction: column;
          gap: 0.5em;
          li {
            display: flex;
            gap: 0.5em;
            align-items: flex-start;
          }
        }
      }
    }
  }
</style>
